SERVER_HOSTNAME=radio.yourfamily.com
STATION_NAME="Your Family Radio"
STATION_DESCRIPTION="Our family radio station"
ICECAST_SOURCE_PASSWORD=changeme_source
ICECAST_ADMIN_PASSWORD=changeme_admin
ICECAST_RELAY_PASSWORD=changeme_relay
ADMIN_TOKEN=changeme_admin_token
SITE_USER=family
SITE_PASSPHRASE=changeme_passphrase

# Backup (optional — leave unset to disable)
# S3 and any S3-compatible store (Cloudflare R2, Backblaze B2, Wasabi, etc.) are supported.
# BACKUP_DEST=s3://your-bucket-name
# BACKUP_ENDPOINT_URL=https://endpoint.example.com  # only needed for non-AWS S3-compatible stores

